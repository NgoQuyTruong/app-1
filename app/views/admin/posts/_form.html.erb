                                        
                                                         
                                        <%= form_for [:admin, @post], html: {class: "outer-repeater admin-form-post", remote: false} do |f| %>
                                            <div class="outer">
                                                <div class="outer">
                                                    <div class="form-group row mb-4">
                                                        <label for="taskname" class="col-form-label col-lg-2">Tiêu đề</label>
                                                        <div class="col-lg-10">
                                                            <%= f.text_field :title, placeholder: 'Tiêu đề bài viết là gì ...' ,class: 'form-control title_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label for="taskname" class="col-form-label col-lg-2">Danh mục</label>
                                                        <div class="col-lg-10">
                                                           <%= f.select :category_ids, options_for_select(Category.all.collect{ |p| [ p.name, p.id ] }, @post.category_ids ),
                                                            {}, { :multiple => true,  class: 'select2 form-control select2-multiple' } %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label for="taskname" class="col-form-label col-lg-2">Tag</label>
                                                        <div class="col-lg-10">
                                                            <%= f.select :tag_ids, options_for_select(Tag.all.collect{ |p| [ p.name, p.id ] }, @post.tag_ids),
                                                            {}, { :multiple => true,  class: 'select2_tag form-control select2-multiple title_tag' } %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label class="col-form-label col-lg-2">Nội dung</label>
                                                        <div class="col-lg-10">
                                                            <div class="">Bạn đang nghĩ gì ?</div>
                                                            <%= f.text_area :body, class: "summernote" %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Đường dẫn hiển thị</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :permalink ,placeholder: 'tieu-de-bai-viet' ,class: 'form-control peralink_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Slug</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :slug ,class: 'form-control peralink_post'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Trạng thái hiển thị</label>
                                                        <div class="col-lg-10">
                                                        <%= f.select :visible, options_for_select([['Công khai',true], ['Riêng tư', false]], true), {},class: 'custom-select' %>
                                                        </div>
                                                  
                                                      </div>
                                                </div>
                                            </div>
                                             <div class="row justify-content-end">
                                                <div class="col-lg-10">
                                                    <button type="submit" class="btn btn-primary new-post">
                                                    <%=
                                                        if current_page?(action: 'new')
                                                            p 'Thêm'
                                                        else
                                                            p 'Cập nhật'
                                                        end
                                                     %>
                                                     </button>
                                                    <%= link_to "Hủy", admin_posts_path , class: "btn btn-secondary" %>
                                                </div>
                                            </div>
                                        
                                            <% end %>