 
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0 font-size-18">Thành viên( <%= @users.total_count %>) </h4>

                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-centered table-nowrap table-hover">
                                                <thead class="thead-light">
                                                    <tr>
                                                        <th scope="col" style="width: 70px;">Avatar</th>
                                                        <th scope="col">Tên tài khoản</th>
                                                        <th scope="col">Chức vụ</th>
                                                        <th scope="col">Email</th>
                                                        <th scope="col">Ngày tạo</th>
                                                        <th scope="col">Bài viết</th>
                                                        <th scope="col">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                <% @users.each do |user| %>
                                                        <tr>
                                                            <td>
                                                                <div class="avatar-xs">
                                                                    <span class="avatar-title rounded-circle">
                                                                        D
                                                                    </span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <h5 class="font-size-14 mb-1"><a href="#" class="text-dark"><%= user.name %></a></h5>
                                                                <p class="text-muted mb-0"><%= user.name %></p>
                                                            </td>
                                                            
                                                            <td>
                                                                <% if user.role == "super_admin" %>
                                                                        Admin
                                                                <% else %>
                                                                        User
                                                                 <% end %>
                                                            </td>
                                                            <td><%= user.email %></td>
                                                            <td>
                                                                <div>
                                                                    <p class="text-muted mb-0"><%= user.created_at %></p>
                                                            
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <a href="#" class="badge badge-soft-primary font-size-11 m-1"><%= user.posts.count %></a>
                                                            </td>
                                                            <td>
                                                                 <ul class="list-inline font-size-20 contact-links mb-0">
                                                                        <li class="list-inline-item px-2">
                                                                            <a href="<%= edit_admin_user_path(user) %>" class="mr-3 text-primary btn btn-outline-warning" data-toggle="tooltip">
                                                                                <i class="mdi mdi-pencil font-size-18"></i> Chỉnh sửa
                                                                            </a>
                                                                        </li>
                                                    
                                                                 </ul>
                                                            </td>
                                                        </tr>
                                                    <% end %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                 <%= paginate @users, 
                                                    theme: 'twitter-bootstrap-4',
                                                    pagination_class: "pagination justify-content-center",
                                                    nav_class: "d-inline-b page-paginate"  
                                                 %>
                                            </div>
                                         
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                            