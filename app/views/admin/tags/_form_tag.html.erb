                         
                                  <%= form_for [:admin, @tag], html: {class: "outer-repeater", remote: false} do |f| %>
                                            <div class="outer">
                                                <div class="outer">
                                                    <div class="form-group row mb-4">
                                                        <label for="taskname" class="col-form-label col-lg-2">Tiêu đề</label>
                                                        <div class="col-lg-10">
                                                            <%= f.select :name, options_for_select(Tag.all.collect{ |p| [ p.name, p.id ] }),
                                                            {}, { :multiple => true,  class: 'select2 form-control select2-multiple title_tag' } %>
                                                            <ul class="list-group d-none" id="myList">
                                                                <% @tags.each do |tag| %>
                                                                    <li class="list-group-item"><%= tag.name %></li>
                                                                <% end %>
                                                            </ul>  
                                                        </div>
                                                    </div>
                                            
                            
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Đường dẫn hiển thị</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :permalink ,placeholder: 'tieu-de-bai-viet' ,class: 'form-control peralink_tag'  %>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4 d-none">
                                                        <label for="taskbudget" class="col-form-label col-lg-2">Slug</label>
                                                        <div class="col-lg-10">
                                                             <%= f.text_field :slug ,class: 'form-control slug_tag'  %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                             <div class="row justify-content-end">
                                                <div class="col-lg-10">
                                                    <button type="submit" class="btn btn-primary new-post">
                                                    <%=
                                                        if current_page?(action: 'new')
                                                            p 'Thêm'
                                                        else
                                                            p 'Cập nhật'
                                                        end
                                                     %>
                                                     </button>
                                                    <%= link_to "Hủy", admin_tags_path , class: "btn btn-secondary" %>
                                                </div>
                                            </div>
                                        
                                            <% end %>