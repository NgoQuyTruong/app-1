                                        
                                                         
                                     <%= form_for [:admin, @comment], html: {class: "outer-repeater", remote: false} do |f| %>
                                            <div class="outer">
                                                <div class="outer">
                                                    
                                                    <div class="form-group row mb-4">
                                                        <label class="col-form-label col-lg-2">Tiêu đề bài viết</label>
                                                        <div class="col-lg-10">
                                                            <input class="form-control" type="text" value="<%= @comment.post.title%>" data-toggle="tooltip"
                                                                  data-original-title="Readonly" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label class="col-form-label col-lg-2">Tác gỉa</label>
                                                        <div class="col-lg-10">
                                                            <input class="form-control" type="text" data-toggle="tooltip"
                                                                  data-original-title="Readonly" value="<%= @comment.user.name %>" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row mb-4">
                                                        <label class="col-form-label col-lg-2">Nội dung bình luận</label>
                                                        <div class="col-lg-10">
                                                            <%= f.text_area :body, class: "form-control" %>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                             <div class="row justify-content-end">
                                                <div class="col-lg-10">
                                                    <button type="submit" class="btn btn-primary new-post">Cập nhật</button>
                                                    <%= link_to "Hủy", admin_posts_path , class: "btn btn-secondary" %>
                                                </div>
                                            </div>
                                        
                                            <% end %>