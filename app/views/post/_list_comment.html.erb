        <% @post.comments.order(created_at: :desc).each do |comment| %>
            <div class="media py-3 border-bottom ">
                <img src="<%= comment.user.avatar.url %>" class="avatar-xs mr-3 rounded-circle" alt="img">
                <div class="media-body">
                    <h5 class="mt-0 mb-1 font-size-15"><%= comment.user.name %></h5>
                    <p class="text-muted"><%= comment.body %></p>
                    <ul class="list-inline float-sm-right mb-sm-0">
                        <li class="list-inline-item">
                            <a href="#"><i class="far fa-thumbs-up mr-1"></i> <%= comment.like %></a>
                        </li>
                            <li class="list-inline-item">
                            <a href="#"><i class="fas fa-thumbs-down mr-1"></i> <%= comment.dislike %></a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#"><i class="far fa-comment-dots mr-1"></i> Comment</a>
                        </li>
                    </ul>
                    <div class="text-muted font-size-12"><i class="far fa-calendar-alt text-primary mr-1"></i><%= time_ago_in_words(comment.created_at) %></div>
                    
                </div>
            </div>
        <% end %>