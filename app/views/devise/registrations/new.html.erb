


<div class="we-login-register">
    <div class="form-title">
        <i class="fa fa-key"></i>Đăng ký
        <span>Đăng ký tài khoản để kết nối với mọi người trên SHARED</span>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'we-form mb-0',}) do |f| %>
        <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: 'Nhập email' %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Nhap lai password' %>
        <button type="submit" class="text-center">Đăng ký</button>
       
    <% end %>
    <span>Bạn có thể bổ sung thông tin của mình trong phần cài đặt tài khoản</span>
    <% if controller_name != 'sessions' %>
        <span>
            Nếu bạn đã có tài khoản? 
            <%= link_to "Đăng nhập",new_session_path(resource_name), class: 'we-account underline' %>
        </span>
    <% end %>
</div>